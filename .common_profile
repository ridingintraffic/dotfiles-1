# misc aliases
JCH() {
    export JAVA_HOME=`/usr/libexec/java_home -v $1`;
}
alias ddown='docker ps -q | xargs docker stop | xargs docker rm'
alias jch=JCH
alias node="env NODE_NO_READLINE=1 rlwrap node"
